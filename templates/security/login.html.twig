{% extends 'base.html.twig' %}
{% block title  %}
 | Se connecter
{% endblock %}

{% block body %}
    <div class="container row">
        <form method="post" class="col-md-6">

        <div class="card-custom col-12 row">
        <div class="col-md-3"></div>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1>Connexion</h1>
            <label for="inputNickname">Pseudo : </label>
            <input type="text" value="{{ last_username }}" name="name" id="inputNickname" class="form-control" autocomplete="username" required autofocus>
            <label for="inputPassword">Mot de passe : </label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>
        </div>

            <button class="btn-primary-custom" type="submit"><span class="valid-button">Se connecter</span></button>
            <a href="{{ path('app_forgot_password') }}" class="btn-danger-custom">Mot de passe oubli√© ?</a>
        </form>
    </div>

{% endblock %}
