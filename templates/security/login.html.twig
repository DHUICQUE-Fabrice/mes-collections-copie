{% extends 'base.html.twig' %}
{% block title  %}
 | Se connecter
{% endblock %}

{% block body %}
<form method="post" class="col-md-6">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Connexion</h1>
    <label for="inputNickname">Pseudo : </label>
    <input type="text" value="{{ last_username }}" name="name" id="inputNickname" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">Mot de passe : </label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>


    <button class="btn btn-primary" type="submit">Se connecter</button>
    <a href="{{ path('app_forgot_password') }}" class="btn btn-danger">Mot de passe oubli√© ?</a>
</form>
{% endblock %}
