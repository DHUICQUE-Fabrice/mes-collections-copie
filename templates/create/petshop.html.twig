{% extends 'base.html.twig' %}
{% block title %}
{{ parent() }} | Nouveau Petshop
{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <button type="submit" name="valid" class="btn btn-primary" onclick="this.disabled=true;this.value='Enregistrement...';this.form.submit()">Valider</button>
                </div>
            </div>
        {{ form_end(form) }}
        <p>Si vous pensez qu'il manque des éléments (par exemple espèce animale), n'hésitez pas à passer par le formulaire de <a href="{{ path('contact') }}">Contact</a></p>
    </div>
{% endblock %}


