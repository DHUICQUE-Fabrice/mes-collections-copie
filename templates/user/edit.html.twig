{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Bonjour {{ app.user.name }}, ici vous pouvez modifier vos informations</h1>
    <br>
    <div class="container">
        {{ form_start(userForm) }}
        {{ form_widget(userForm) }}
        <button type="submit" name="valid" class="btn btn-primary" onclick="this.disabled=true;this.value='Enregistrement...';this.form.submit()">Valider</button>
        {{ form_end(userForm) }}
            {% if app.user.imageName %}
                <form action="{{ path('delete_profile_image', {name: app.user.name}) }}" method="post">
                    <input type="hidden" name="token" value="{{ csrf_token('delete-image' ~ app.user.id) }}">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette image ?')">Supprimer l'image</button>
                </form>
            {% endif %}

    </div>
    <p class="text-center">Pour modifier votre mot de passe, veuillez utiliser le lien "Mot de passe oublié" sur la page de connexion.</p>
{% endblock %}

{% block title %}
     | Modification du profil
{% endblock %}

