{% extends 'base.html.twig' %}
{% block title  %}
    {{ parent() }} | {{ user.name }}
{% endblock %}
{% block body %}
    <div class="container">
    {% if app.user == user %}
        <form action="{{ path('editProfile', {name: user.name}) }}">
            <button type="submit" name="edit" class="btn btn-primary">Modifier mon profil</button>
        </form>
    {% endif %}

        {% if user.imageName %}
            <img src="{{ (path_asset_image_profile ~ user.imageName) | imagine_filter('details')  }}" alt="{{ user.name }}" title="{{ user.name }}" width="250">
        {% else %}
            <img src="{{ asset('build/images/placeholder_avatar.png')}}" alt="{{ user.name }}" title="{{ user.name }}" width="250">
        {% endif %}

        {% if user.about %}
        <p class="text-black text-center">{{ user.about }}</p>
    {% endif %}
    <p class="text-center text-black">{{ user.name }} est membre depuis le {{ user.createdAt | date('d/m/Y')}}, il a {{ user.petshops.count }} petshops et {{ user.horseSchleiches.count }} chevaux Schleich, les voici :</p>
    </div>
    <div id="cards_landscape_wrap-2">
    <div class="container">
        <div class="row">
            {% for item in items %}
                {% if item in user.petshops %}
                {% set thisClass='petshop' %}
                {% elseif item in user.horseSchleiches %}
                    {% set thisClass='horse_schleich' %}
                    {% endif %}
                {% include 'inc/_cards.html.twig' %}
            {% endfor %}
        </div>
    </div>
</div>
    <div class="d-flex justify-content-center">
        {% do items.setPageRange(4) %}
        {{ knp_pagination_render(items, 'inc/_pagination.html.twig') }}
    </div>

{% endblock %}



