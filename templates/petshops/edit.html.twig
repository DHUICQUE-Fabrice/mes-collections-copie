{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(petshopForm) }}
        {{ form_widget(petshopForm) }}
        <button type="submit" class="btn btn-primary" onclick="this.disabled=true;this.value='Enregistrement...';this.form.submit()">Valider</button>
        <a href="{{ path('petshop_details', {slug: petshop.slug}) }}" class="btn btn-primary">Retour</a>
        {{ form_end(petshopForm) }}
            {% if petshop.imageName %}
                <form action="{{ path('delete_petshop_image', {id: petshop.id}) }}" method="post">
                    <input type="hidden" name="token" value="{{ csrf_token('delete-image' ~ petshop.id) }}">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette image ?')">Supprimer l'image</button>
                </form>
            {% endif %}
                <form action="{{ path('delete_petshop', {id: petshop.id}) }}" method="post">
                    <input type="hidden" name="token" value="{{ csrf_token('delete-petshop' ~ petshop.id) }}">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ petshop.name }} ? Ceci sera définitif !')">Supprimer
                        {{ petshop.name }}</button>
                </form>
    </div>
{% endblock %}

{% block title %}
 | Modifier {{ petshop.name }}
{% endblock %}

